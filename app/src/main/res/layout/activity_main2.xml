                android:layout_marginLeft="50px"
                android:layout_marginTop="15px"
                android:layout_marginRight="50px"
                android:hint="IMC"
                android:padding="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valor_cal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="20px"
                android:hint="IMC"
                android:padding="20dp" />

            <TextView
                android:id="@+id/valor_cal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:hint="IMC"
                android:padding="20dp" />

            <TextView
                android:id="@+id/valor_cal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="15px"
                android:layout_marginRight="20px"
                android:hint="IMC"
                android:padding="20dp" />

            <TextView
                android:id="@+id/valor_cal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="15px"
                android:layout_marginRight="20px"
                android:hint="IMC"
                android:padding="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="50px"
                android:text="El valor subtotal es" />

            <TextView
                android:id="@+id/Totl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="50px"
                android:text="El valor total de la compra con iva es" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:hint="Subtotal" />

            <TextView
                android:id="@+id/Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:hint="Valor total" />
        </LinearLayout>

    </LinearLayout>

